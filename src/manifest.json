{
  "manifest_version": 2,
  "name": "reading mode",
  "description": "reading mode",
  "version": "0.0.1",
  "icons": {
    "48": "/icons/icon_48.png"
  },
  "page_action": {
    "default_title": "move to reading mode"
  },
  "web_accessible_resources": [
    "./index.css"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "index.ts"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": [
      "background.ts"
    ]
  }
}